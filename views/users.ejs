<!-- views/users.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/user.css">
</head>
<body>
  <h1>User Management</h1>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Admin</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
          <td>
            <form action="/users/delete/<%= user._id %>" method="POST" style="display:inline;">
              <button type="submit">🗑️</button>
            </form>
            <% if (!user.isAdmin) { %>
              <form action="/users/upgrade/<%= user._id %>" method="POST" style="display:inline;">
                <button type="submit">⬆️</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/galleri">Back to Gallery</a>
  <%- include('partials/foot') %>
</body>
</html>